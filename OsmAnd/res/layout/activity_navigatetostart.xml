<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:gravity="center" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
		android:layout_margin="@dimen/margin_defaut">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="center" android:id="@+id/LinearLayoutButtons"
		android:layout_alignParentBottom="true" 
		android:weightSum="2">

 			<Button
            android:id="@+id/PreviousButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:text="@string/cancel_button"
            android:layout_weight="1" >
        </Button>

        <Button
            android:id="@+id/NextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:text="@string/start_button" 
            android:layout_weight="1" >
        </Button>

	</LinearLayout>
    
	<LinearLayout 
	    android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
    <TextView 
        android:id="@+id/navigatetopoint_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_defaut"
            android:text="@string/navigate_to_point"
            android:autoLink="web"
        />
    
    <TextView 
        android:id="@+id/startingpoint_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_defaut"
            android:text="@string/starting_point"
            android:autoLink="web"
        />
    <TextView 
        android:id="@+id/point_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_defaut"
            android:text="@string/unknown_location"
            android:autoLink="web"
        />
    <Button
            android:id="@+id/locationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:text="@string/show_on_google_maps" 
            android:layout_weight="1" >
        </Button>
    </LinearLayout>


</RelativeLayout>